@model BlogMvcProject.Models.Skill

<div class="alert alert-success alert-dismissible" id="divsuccessSkill" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-check"></i>Skill Alert</h4>
    Your skill is updated.
</div>
<div class="alert alert-danger alert-dismissible" id="diverrorSkill" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-ban"></i>Skill Alert</h4>
    Your skill isn't updated.
</div>
<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">
            What can I do?
            <small>Skills Update</small>
        </h3>
        <div class="pull-right box-tools">
            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body pad">

        @using (Ajax.BeginForm("_AdminSkill", "Admin", FormMethod.Post, new AjaxOptions { OnSuccess = "successSkill" }, new { id = "formSkill" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-fonticons"></i></span>
                @Html.TextBoxFor(m => m.Icon, new { @class = "form-control" ,placeholder="Enter name of font awesome icon" })
                @Html.ValidationMessageFor(m => m.Icon)
            </div>


            <br />

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter name of your skill" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <br/>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pie-chart"></i></span>
                @Html.TextBoxFor(m => m.Percent, new { @class = "form-control", placeholder = "Enter percent of skill" })
                @Html.ValidationMessageFor(m => m.Percent)
            </div>


            <br />

            <div class="input-group">
                
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter description of your skill" , rows = "10", cols = "300" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>

                <br />
                <div class="pull-right box-tools">

                    <button type="submit" class="btn btn-info btn-sm" data-toggle="tooltip" title="Save">
                        <i class="fa fa-check-square-o"></i>Save
                    </button>

                </div>
                }

            </div>
</div>