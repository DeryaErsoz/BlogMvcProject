@model BlogMvcProject.Models.Experience

<div class="alert alert-success alert-dismissible" id="divsuccessExperience" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-check"></i>Resume Alert</h4>
    Your experience is updated.
</div>
<div class="alert alert-danger alert-dismissible" id="diverrorExperience" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-ban"></i>Resume Alert</h4>
    Your experience isn't updated.
</div>
<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">
            Experience
            <small>Experience Text Update</small>
        </h3>
        <div class="pull-right box-tools">
            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body pad">

        @using (Ajax.BeginForm("_AdminExperience", "Admin", FormMethod.Post, new AjaxOptions { OnSuccess = "successExperience" }, new { id = "formExperience" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                @Html.TextBoxFor(m => m.Company, new { @class = "form-control", placeholder = "Enter name of company" })
                @Html.ValidationMessageFor(m => m.Company)
            </div>

                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                        @Html.TextBoxFor(m => m.TitleofJob, new { @class = "form-control", placeholder = "Enter Title of Job" })
                        @Html.ValidationMessageFor(m => m.TitleofJob)
                    </div>

                    <br />

                 

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        @Html.EditorFor(m => m.StartDate, new { @class = "form-control", placeholder = "Enter start date" })
                        @Html.ValidationMessageFor(m => m.StartDate)
                    </div>


                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        @Html.EditorFor(m => m.EndDate, new { @class = "form-control", placeholder = "Enter end date" })
                        @Html.ValidationMessageFor(m => m.EndDate)
                    </div>


                    <br />

                    <div class="input-group">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter description of your job", rows = "10", cols = "300" })
                        @Html.ValidationMessageFor(m => m.Description)
                    </div>

                    <br />
                    <div class="pull-right box-tools">
                        <button type="submit" class="btn btn-info btn-sm" data-toggle="tooltip" title="Save">
                            <i class="fa fa-check-square-o"></i>Save
                        </button>
                    </div>
        }

    </div>
</div>