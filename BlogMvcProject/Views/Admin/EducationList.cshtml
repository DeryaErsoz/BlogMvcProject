@model IEnumerable<BlogMvcProject.Models.Resume>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section Menu {
    @Scripts.Render("~/Scripts/Tables/Data/menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")

<div class="row">
    <div class="col-xs-12">
    
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Education List</h3>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.School)</th>
                            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>Is Active?</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>    
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.School</td>
                                <td>@item.StartDate.ToShortDateString()</td>
                                <td>@item.EndDate.ToShortDateString()</td>
                                <td>@item.Description</td>
                                @if (@item.IsActive == true)
                                {
                                    <td><button class="btn btn-success" ><i class="fa fa-check"></i></button></td>
                                }
                                else
                                {
                                    <td><button class="btn btn-warning"><i class="fa fa-remove"></i></button></td>
                                }
                               <td>@Html.ActionLink("Edit", "EducationListEdit", new { id =item.ID }) |
                            @Html.ActionLink("Delete", "EducationListDelete", new { id = item.ID })</td>
                            </tr>
                        }
                      
                    </tbody>
                   
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}




