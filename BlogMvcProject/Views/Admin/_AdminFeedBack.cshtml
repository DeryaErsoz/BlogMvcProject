@model BlogMvcProject.Models.Client

<div class="alert alert-success alert-dismissible" id="divsuccessClient" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-check"></i>Feedback Alert</h4>
   Feedback is updated.
</div>
<div class="alert alert-danger alert-dismissible" id="diverrorClient" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-ban"></i>Feedback Alert</h4>
    Feedback isn't updated.
</div>
<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">
            Portfolio
            <small>Portfolio Feedback</small>
        </h3>
        <div class="pull-right box-tools">
            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body pad">

        @using (Ajax.BeginForm("_AdminFeedBack", "Admin", FormMethod.Post, new AjaxOptions { OnSuccess = "successFeedBack" }, new { id = "formFeedBack" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                @Html.TextBoxFor(m => m.NameSurname, new { @class = "form-control", placeholder = "Enter name surname " })
                @Html.ValidationMessageFor(m => m.NameSurname)
            </div>


            <br />

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-comment-o"></i></span>
                @Html.TextBoxFor(m => m.Comment, new { @class = "form-control", placeholder = "Enter comment" })
                @Html.ValidationMessageFor(m => m.Comment)
            </div>
            <br />
                <div class="pull-right box-tools">
              
                    <button type="submit" class="btn btn-info btn-sm" data-toggle="tooltip" title="Save">
                        <i class="fa fa-check-square-o"></i>Save
                    </button>

                </div>
        }

    </div>
</div>

